<p id="notice"><%= notice %></p>
<div class="row">
            <div class="box">
                <div class="col-lg-12 intro-text text-center">
                	<h3><%= @good.name %></h3>
                <hr>
                <table border=2px style="text-align:center" class="table table-bordered table-striped active info" cellspacing="0" width="100%" >
					  <thead>
					    <tr>				      
					      <th>ملاحظات</th>
					      <th>التاريخ</th>
					      <th>الكمية</th>
					      <th>السعر للوحدة</th>
					      <th>المطلوب</th>
					      <th>المبلغ</th>
					    </tr>
					  </thead>
					  <tbody>
					    <% @buys.each do |buy| %>
					      <tr>
					      	<td><%= buy.note %></td>
					      	<td><%= tn(buy.date.day.to_int) %>-<%= tn(buy.date.month.to_int) %>-<%= tn(buy.date.year.to_int)%></td>
					      	<td> <%= tn(buy.quantity.to_int) %>  <%= @good.unit %> </td>
					      	<td><%= tn(buy.price_per_unit.to_int) %></td>
					      	<td><%= tn(buy.price_per_unit.to_int*buy.quantity.to_int) %></td>
					        <td><%= tn(buy.paid.to_int) %></td> 
					      </tr>
					    <% end %>
					    <tr>				      	
					      	<td colspan="4">الإجمالى</td>
					      	<td><%= tn(@estimated_price.to_int) %></td>
					      	<td><%= tn(@total_price.to_int) %></td>
					    </tr>
					  </tbody>
					</table>
				</div>
			</div>
		</div>
