<div class="row">
            <div class="box">
                <div class="col-lg-12 intro-text text-center">
                    <%= form_for(@pay) do |f| %>
                      <% if @pay.errors.any? %>
                        <div id="error_explanation">
                          <h2><%= pluralize(@pay.errors.count, "error") %> prohibited this pay from being saved:</h2>

                          <ul>
                          <% @pay.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                          <% end %>
                          </ul>
                        </div>
                      <% end %>

                      <div class="field">
                        <strong>المبلغ</strong><br/>
                        <%= f.text_field :amount %>
                      </div>
                      <div class="field">
                        <strong>تاريخ</strong><br/>
                        <%= f.date_select :date %>
                      </div>
                      <div class="field">
                        <strong>ملاحظات</strong><br/>
                        <%= f.text_area :note %>
                      </div>
                      <div class="field">
                        <strong>المقاول</strong><br/>
                        <%= collection_select(:pay, :contractor_id, @contractor, :id, :name, {:prompt => false}) %>
                      </div>
                      <div class="actions">
                        <%= f.submit %>
                      </div>
                    <% end %>
        </div>
    </div>
</div>