                          <th>الموبايل</th>
                          <th>الأسم</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% @contractors.each do |contractor| %>
                          <tr>                            
                            <td><%= link_to 'عرض', contractor %></td>
                            <td><%= contractor.note %></td>
                            <td><%= contractor.cause %></td>
                            <td><%= contractor.phone %></td>
