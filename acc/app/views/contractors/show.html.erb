<p id="notice"><%= notice %></p>
<div class="row">
    <div class="box">
           <div class="col-lg-12 intro-text text-center">
					<p id="notice"><%= notice %></p>

					<h1><%= @contractor.name %> : <%= @contractor.cause %></h1>

                <table border=2px style="text-align:center" class="table table-bordered table-striped active info" cellspacing="0" width="100%" >
					  <thead>
					    <tr>
					      <th>ملاحظات</th>
					      <th>التاريخ</th>
					      <th>المبلغ</th>
					    </tr>
					  </thead>

					  <tbody>
					    <% @pays.each do |pay| %>
					      <tr>
					        <td><%= pay.note %></td>
					        <td><%= tn(pay.date.day.to_int) %>-<%= tn(pay.date.month.to_int) %>-<%= tn(pay.date.year.to_int)%></td>
					        <td><%= tn(pay.amount.to_int) %></td>
					      </tr>
					    <% end %>
					    <tr>
					    	<td colspan="2">الأجمالى</td>
					    	<td><%= tn(@total.to_int) %></td>
					    </tr>
					  </tbody>
					</table>
					<%= link_to 'عودة للصفحة السابقة', "/contractors" %>
		</div>
	</div>
</div>